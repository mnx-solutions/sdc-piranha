doctype html
html(lang='en',data-ng-app='JoyentPortal', id="ng-app", data-ng-controller='MainController')
  head
    meta(charset='utf-8')
    meta(name='fragment',content='!')
    meta(http-equiv="X-UA-Compatible", content="IE=Edge")
    meta(http-equiv="MSThemeCompatible" content="NO")
    //if lt IE 9
      script(type="text/javascript").
        window.top.location.href = '/old-browser';
    title(data-ng-bind='windowTitle') Joyent Cloud
    style(type='text/css') @charset "UTF-8";[ng\:cloak],[ng-cloak],[data-ng-cloak],[x-ng-cloak],.ng-cloak,.x-ng-cloak{display:none;}ng\:form{display:block;}
    each link in css
        link(rel='stylesheet',href='#{link._url}',type='text/css')
  body()

    div(data-main-menu, class='modulizer-module-menu header navbar navbar-inverse navbar-fixed-top')
    div(data-main-left, id='leftPanel', ng-class="{'expanded': sideBarMin}")
    //div(data-notification, class='JoyentPortal-module-notification')
    div(data-ng-switch='subview', class='subview-dash container-fluid ng-cloak', ng-cloak,ng-class="{'leftpanel-small': sideBarMin}")

      each layout in layouts
        div(data-ng-switch-when='#{layout.module}',class='modulizer-module-#{layout.module}',data-ng-controller='#{layout.module}.LayoutController')!= layout.data
    div(class='modulizer-module-menu')
        div(class="container")
        div(class="footer")
             div(class="pull-left")
                    ul(class="nav")
                        li
                            a(href="http://www.joyent.com/", target="_blank") Joyent.com
                        li
                            a(href="http://www.joyent.com/tos", target="_blank") Terms of Service
                        li
                            a(href="http://www.joyent.com/company/policies", target="_blank") Policies
                        li
                            a(href="http://www.joyent.com/company/security-and-compliance", target="_blank") Compliance
                        li
                            a(href="https://help.joyent.com/forums/20715782-current-system-status", target="_blank") System Status
                        li
                            a(href="http://apidocs.joyent.com/cloudapi/", target="_blank") API
                div(class="pull-right nav")
                    a &copy; 2013 Joyent, Inc.
            div(class="clearfix")

    each link in js
        script(type='text/javascript',src='#{link._url}')
    each source in jss
        script(type='text/javascript')!= source
    each partial in partials
        script(type='text/ng-template',id='#{partial._id}')!= partial._content

    script(type='text/javascript').
        if (typeof(Zenbox) !== "undefined") {
          Zenbox.init({
            dropboxID:   "20078915",
            url:         "https://joyentcloud.zendesk.com",
            tabTooltip:  "Support",
            tabImageURL: "https://assets.zendesk.com/external/zenbox/images/tab_support.png",
            tabColor:    "#ff6600",
            tabPosition: "Right"
          });
          $("#zenbox_tab").click(function () {
            if (typeof(_gaq) !== "undefined") {
              _gaq.push(["_trackEvent", "Window Open", "Zenbox Support"]);
            }
          });
        }